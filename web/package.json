{
  "private": true,
  "type": "module",
  "devDependencies": {
    "@marp-team/marp-cli": "^1.4.1",
    "@wooorm/starry-night": "^3.4.0",
    "clean-css": "^5.3.3",
    "coherentpdf": "^2.5.5",
    "ejs": "^3.1.10",
    "hast-util-to-html": "^9.0.1",
    "ini": "^4.1.3",
    "markdown-it": "^14.1.0",
    "markdown-it-front-matter": "^0.2.4",
    "node-stream-zip": "^1.15.0",
    "p-debounce": "^4.0.0",
    "p-limit": "^6.0.0",
    "watcher": "^2.3.1"
  },
  "marp": {
    "pdfOutlines": true,
    "options": {
      "markdown": {
        "html": true,
        "breaks": false,
        "linkify": true,
        "typographer": true
      }
    }
  },
  "scripts": {
    "build": "node index.js --debug",
    "watch": "node index.js --watch",
    "clean": "rm -rf ${OUTPUT_DIR:-$npm_package_config_outputDir}"
  },
  "config": {
    "outputDir": "../_site",
    "urlPrefix": "",
    "traces": {
      "gradleDir": "../",
      "gradleSubprojects": [
        "lab2-solution",
        "lab3-solution",
        "lab4-solution",
        "lab5-solution"
      ]
    },
    "marpit": {
      "slidesDir": "./slides",
      "marpArgs": [
        "--html",
        "--theme",
        "gerard",
        "--theme-set",
        "static/css/gerard.css"
      ]
    },
    "watcher": {
      "recursive": true,
      "debounce": 500
    },
    "markdownit": {
      "inputDir": "./markdown",
      "options": {
        "html": true,
        "breaks": false,
        "linkify": true,
        "typographer": true
      }
    },
    "static": {
      "inputDir": "./static"
    },
    "code": {
      "inputDirs": [
        "../common",
        "../lab1-solution",
        "../lab2-solution",
        "../lab3-solution",
        "../lab4-solution",
        "../lab5-solution"
      ]
    }
  }
}
